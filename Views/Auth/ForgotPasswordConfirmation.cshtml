@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Email Sent!</h4>
                        <p>Please check your email to reset your password.</p>
                        <hr>
                        <p class="mb-0">If you don't receive an email within a few minutes, please check your spam folder.</p>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 