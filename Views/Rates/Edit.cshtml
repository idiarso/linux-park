@model ParkIRC.Models.ParkingRateConfiguration
@using ParkIRC.Extensions

@{
    ViewData["Title"] = "Edit Tarif Parkir";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="mb-3">@ViewData["Title"]</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Kembali ke Daftar
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="CreatedBy" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="VehicleType" class="form-label">Jenis Kendaraan</label>
                            <select asp-for="VehicleType" class="form-select" required>
                                <option value="">-- Pilih Jenis Kendaraan --</option>
                                <option value="Motorcycle">Sepeda Motor</option>
                                <option value="Car">Mobil</option>
                                <option value="Bus">Bus</option>
                                <option value="Truck">Truk</option>
                            </select>
                            <span asp-validation-for="VehicleType" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="BaseRate" class="form-label">Tarif Dasar</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="BaseRate" class="form-control" type="number" min="0" required />
                            </div>
                            <span asp-validation-for="BaseRate" class="text-danger"></span>
                            <small class="text-muted">Tarif sekali masuk, terlepas dari durasi</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="HourlyRate" class="form-label">Tarif per Jam</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="HourlyRate" class="form-control" type="number" min="0" required />
                            </div>
                            <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            <small class="text-muted">Dikenakan untuk setiap jam parkir</small>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="DailyRate" class="form-label">Tarif Harian</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="DailyRate" class="form-control" type="number" min="0" required />
                            </div>
                            <span asp-validation-for="DailyRate" class="text-danger"></span>
                            <small class="text-muted">Tarif maksimal untuk durasi 24 jam</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="WeeklyRate" class="form-label">Tarif Mingguan</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="WeeklyRate" class="form-control" type="number" min="0" required />
                            </div>
                            <span asp-validation-for="WeeklyRate" class="text-danger"></span>
                            <small class="text-muted">Tarif untuk langganan mingguan</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="MonthlyRate" class="form-label">Tarif Bulanan</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="MonthlyRate" class="form-control" type="number" min="0" required />
                            </div>
                            <span asp-validation-for="MonthlyRate" class="text-danger"></span>
                            <small class="text-muted">Tarif untuk langganan bulanan</small>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="EffectiveFrom" class="form-label">Berlaku Sejak</label>
                            <input asp-for="EffectiveFrom" class="form-control" type="date" required />
                            <span asp-validation-for="EffectiveFrom" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3 form-check form-switch mt-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Aktifkan Tarif</label>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Simpan Perubahan
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Batal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 