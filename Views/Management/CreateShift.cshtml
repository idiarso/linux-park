@model ParkIRC.Models.Shift

@{
    ViewData["Title"] = "Tambah Shift Baru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="mb-3">@ViewData["Title"]</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Shifts" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Kembali
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="CreateShift" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nama Shift</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Deskripsi</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Waktu Mulai</label>
                            <input name="startTime" class="form-control" type="time" required />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Waktu Selesai</label>
                            <input name="endTime" class="form-control" type="time" required />
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="MaxOperators" class="form-label">Jumlah Maksimal Operator</label>
                            <input asp-for="MaxOperators" class="form-control" type="number" min="1" value="1" required />
                            <span asp-validation-for="MaxOperators" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Hari Kerja</label>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="WorkDays" value="Monday" id="monday" checked />
                                <label class="form-check-label" for="monday">Senin</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="WorkDays" value="Tuesday" id="tuesday" checked />
                                <label class="form-check-label" for="tuesday">Selasa</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="WorkDays" value="Wednesday" id="wednesday" checked />
                                <label class="form-check-label" for="wednesday">Rabu</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="WorkDays" value="Thursday" id="thursday" checked />
                                <label class="form-check-label" for="thursday">Kamis</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="WorkDays" value="Friday" id="friday" checked />
                                <label class="form-check-label" for="friday">Jumat</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="WorkDays" value="Saturday" id="saturday" />
                                <label class="form-check-label" for="saturday">Sabtu</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="WorkDays" value="Sunday" id="sunday" />
                                <label class="form-check-label" for="sunday">Minggu</label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3 form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked />
                    <label class="form-check-label" asp-for="IsActive">Aktifkan Shift</label>
                </div>
                
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Simpan
                    </button>
                    <a asp-action="Shifts" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Batal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 