@*
    ParkIRC - Parking Management System
*@
@{
}

<header class="geex-header">
    <div class="geex-header__wrapper">
        <div class="geex-header__logo-wrapper">
            <a href="@Url.Action("Dashboard","Parking")" class="geex-header__logo">
                <img class="logo-lite" src="~/img/logo-dark.svg" alt="Header logo" />
                <img class="logo-dark" src="~/img/logo-lite.svg" alt="Header logo" />
            </a>
            <span class="ms-3 fw-bold">Sistem Manajemen Parkir</span>
        </div>
        <nav class="geex-header__menu-wrapper">
            <ul class="geex-header__menu">
                <!-- Dashboard -->
                <li class="geex-header__menu__item">
                    <a href="@Url.Action("Dashboard","Parking")" class="geex-header__menu__link">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Kendaraan -->
                <li class="geex-header__menu__item has-children">
                    <a href="#" class="geex-header__menu__link">
                        <i class="fas fa-car"></i>
                        <span>Kendaraan</span>
                    </a>
                    <ul class="geex-header__submenu">
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Entry","Gate")" class="geex-header__menu__link">
                                <i class="fas fa-sign-in-alt"></i> Kendaraan Masuk
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("VehicleExit","Parking")" class="geex-header__menu__link">
                                <i class="fas fa-sign-out-alt"></i> Kendaraan Keluar
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("LiveDashboard","Parking")" class="geex-header__menu__link">
                                <i class="fas fa-video"></i> Monitor Langsung
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Manajemen -->
                <li class="geex-header__menu__item has-children">
                    <a href="#" class="geex-header__menu__link">
                        <i class="fas fa-cogs"></i>
                        <span>Manajemen</span>
                    </a>
                    <ul class="geex-header__submenu">
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("ParkingSlots","Management")" class="geex-header__menu__link">
                                <i class="fas fa-th"></i> Kelola Slot
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Operators","Management")" class="geex-header__menu__link">
                                <i class="fas fa-users"></i> Kelola Operator
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Shifts","Management")" class="geex-header__menu__link">
                                <i class="fas fa-clock"></i> Kelola Shift
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Laporan -->
                <li class="geex-header__menu__item has-children">
                    <a href="#" class="geex-header__menu__link">
                        <i class="fas fa-chart-bar"></i>
                        <span>Laporan</span>
                    </a>
                    <ul class="geex-header__submenu">
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Daily","Reports")" class="geex-header__menu__link">
                                <i class="fas fa-calendar-day"></i> Laporan Harian
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Monthly","Reports")" class="geex-header__menu__link">
                                <i class="fas fa-calendar-alt"></i> Laporan Bulanan
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Custom","Reports")" class="geex-header__menu__link">
                                <i class="fas fa-calendar-check"></i> Laporan Kustom
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Pengaturan -->
                <li class="geex-header__menu__item has-children">
                    <a href="#" class="geex-header__menu__link">
                        <i class="fas fa-wrench"></i>
                        <span>Pengaturan</span>
                    </a>
                    <ul class="geex-header__submenu">
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Index","Rates")" class="geex-header__menu__link">
                                <i class="fas fa-money-bill-wave"></i> Tarif Parkir
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Backup","Settings")" class="geex-header__menu__link">
                                <i class="fas fa-database"></i> Backup & Restore
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Settings","Parking")" class="geex-header__menu__link">
                                <i class="fas fa-cog"></i> Pengaturan Umum
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        
        <!-- Mobile Menu Toggle -->
        <button class="geex-header__mobile-toggle d-lg-none">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Right Side Menu -->
        <div class="geex-header__right-side">
            <!-- User Profile -->
            <div class="geex-header__user-profile dropdown">
                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="fas fa-user-circle"></i>
                    <span class="d-none d-md-inline">@User.Identity?.Name</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Profile","Account")">
                            <i class="fas fa-user me-2"></i> Profil
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("ChangePassword","Account")">
                            <i class="fas fa-key me-2"></i> Ganti Password
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i> Keluar
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>