<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Catat Kendaraan Keluar</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Nomor Kendaraan</label>
            <input type="text" id="vehicleNumber" class="form-control" readonly />
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <img id="entryPhoto" class="img-fluid" />
                <p>Foto Masuk</p>
            </div>
        </div>

        <div class="form-group">
            <label>Metode Pembayaran</label>
            <select id="paymentMethod" class="form-control">
                <option value="Tunai">Tunai</option>
                <option value="QRIS">QRIS</option>
            </select>
        </div>

        <div class="form-group">
            <label>Total Pembayaran</label>
            <input type="text" id="totalAmount" class="form-control" readonly />
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
        <button type="button" class="btn btn-primary" id="btnProcessExit">Proses Keluar</button>
    </div>
</div> 